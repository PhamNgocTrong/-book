<!--Sản phẩm   row: chua nhieu san pham 
 -->
 {{> header}}
 <br>
 <br>
 <br>
 <br>
   <div class="mt-4 ">
    <div class="row" style="margin-top: 30px;">    
        {{#each Books}}
         <div class="col-sm-6 col-lg-3" style="margin-bottom: 20px;">
            <div class="card h-100">
                <a href="/detailsbook/{{this.slug}}">
                 <img src="{{this.productImage}}" class="card-img-top" alt="{{this.name}}">
                </a>
            <div class="card-body">
                 <a href="/detailsbook/{{this.slug}}">
                   <h5 class="card-title" style="text-align: center;">{{this.name}}</h5>
                 </a>
                <h5 class="card-title" style="text-align: center;">
                        <span style="color: black; font-weight: bold;">Giá: </span>
                        <span style="color: red; font-weight: bold;">{{this.price}}</span>
                    </h5>
                {{!-- <p class="card-text"style="text-align: center;">{{this.productDescription}}</p> --}}
                <div class="d-flex justify-content-center align-items-center">
                    <a href="#" class="btn btn-primary" style="display:inline-block;">Mua sản phẩm</a>
                </div>
            </div>
        </div>
         </div>

         {{/each}}
    </div>
   </div>
    {{> footer}}